# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# =============================================================================
# Nombre de la base de datos
POSTGRES_DB=test_lkmx

# Usuario de PostgreSQL
POSTGRES_USER=test

# Contraseña de PostgreSQL
POSTGRES_PASSWORD=tester123

# =============================================================================
# URL DE CONEXIÓN A LA BASE DE DATOS
# =============================================================================
# Para Docker Compose
DATABASE_URL=postgresql://test:tester123@postgres:5432/test_lkmx

# Para desarrollo local (cambiar por tu configuración local)
# DATABASE_URL=postgresql://test:tester123@localhost:5432/test_lkmx

# =============================================================================
# CONFIGURACIÓN DE NEXT.JS
# =============================================================================
# Entorno de ejecución
NODE_ENV=production

# Deshabilitar telemetría de Next.js
NEXT_TELEMETRY_DISABLED=1